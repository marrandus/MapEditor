{
    "version": "2.0.0",
   "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Release; cmake --build build -j2",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
        ,
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf build",
            "problemMatcher": [],
            "group": "none"
        }
    ]
}